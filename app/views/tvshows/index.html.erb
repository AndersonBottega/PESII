<p id="notice"><%= notice %></p>

<h1>Listing Tvshows</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Ano</th>
      <th>Season</th>
      <th>Episodio</th>
      <th>Nota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tvshows.each do |tvshow| %>
      <tr>
        <td><%= tvshow.titulo %></td>
        <td><%= tvshow.ano %></td>
        <td><%= tvshow.season %></td>
        <td><%= tvshow.episodio %></td>
        <td><%= tvshow.nota %></td>
        <td><%= link_to 'Show', tvshow %></td>
        <td><%= link_to 'Edit', edit_tvshow_path(tvshow) %></td>
        <td><%= link_to 'Destroy', tvshow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

